{
  "name": "Proteus Framework Tools",
  "version": "2.0",
  "manifest_version": 2,
  
  "description": "Web developer information for Proteus Framework hosted sites",
  "icons": {"16": "images/icon-16.ico", "48": "images/icon-48.png", "128": "images/icon-128.png"},
  "minimum_chrome_version": "22",
  "omnibox": { "keyword" : "pf" },
  "page_action": {
    "default_icon":	{"19": "images/icon-19.png", "38": "images/icon-38.png"},
	"default_title": "Web Developer Information",
	"default_popup": "popup.html"
  },
  "background": {
  	"scripts":[ "bg/database.js", "bg/omni.js", "bg/main.js" ],
  	"persistent": true
  },

  "options_page": "options.html",

  "content_scripts" : [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js" : ["vipa-tools.js"],
      "run_at" : "document_end",
      "all_frames" : false
    }
  ],
  
  "devtools_page": "devtools/devtools.html",
  
  "permissions": [
  	"alarms",
	"notifications", 
	"tabs",
	"webRequest",
	"*://*/*"
  ]
}